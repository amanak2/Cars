<%= simple_form_for @car, html: { multipart: true } do |f| %>

  <% if @car.errors.any? %>
    <div id="errors">
      <p>
        <%= pluralize(@car.errors.count, "error") %>
        prohibited this CAR from being saved:
      </p>
      <ul>
        <% @car.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="panel-body">
    <%= f.input :image, input_html: {class: "form-control"} %>
    <%= f.input :name, input_html: {class: "form-control"} %>
    <%= f.input :company, input_html: {class: "form-control"} %>

    <div class="row">

      <div class="col-md-3">
        <h3>Engine</h3>
        <div id="Engine">
          <%= f.simple_fields_for :engines do |engine| %>
            <%= render "engine_fields", f: engine %>
          <% end %>
          <div class="links">
            <%= link_to_add_association 'Add', f, :engines, class: "btn btn-default add-button" %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <h3>Performance</h3>
        <div id="Performance">
          <%= f.simple_fields_for :performances do |performance| %>
            <%= render "performance_fields", f: performance %>
          <% end %>
          <div class="links">
            <%= link_to_add_association 'Add', f, :performances, class: "btn btn-default add-button" %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <h3>Transmission</h3>
        <div id="Transmission">
          <%= f.simple_fields_for :transmissions do |transmission| %>
            <%= render "transmission_fields", f: transmission %>
          <% end %>
          <div class="links">
            <%= link_to_add_association 'Add', f, :transmissions, class: "btn btn-default add-button" %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <h3>Dimensions</h3>
        <div id="Dimension">
          <%= f.simple_fields_for :dimensions do |dimension| %>
            <%= render "dimension_fields", f: dimension %>
          <% end %>
          <div class="links">
            <%= link_to_add_association 'Add', f, :dimensions, class: "btn btn-default add-button" %>
          </div>
        </div>
      </div>

    </div>
  <%= f.button :submit, class: "btn btn-primary"%>
  </div>
<% end %>
